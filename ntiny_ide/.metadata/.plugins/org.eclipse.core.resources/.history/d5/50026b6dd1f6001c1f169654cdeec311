uint8_t set_speed(uint16_t micro_second)
    {
        if (micro_second >2500 || micro_second <500)
        {
            return -1;
        }
        uint8_t compare = (micro_second*360)/20000;
        set_compare1(compare);
        return 0;
    }

int main(void)		//Change it later
{

	int_disable();
	uart_init(9600);


	gpio_mode(0,1);
	pwm_init();
	set_period1(360);// resolution of one angle
	set_prescaler(2777); // default frequency of 50 Hz with above resoluion
	set_speed(1000);

	while(1){

		if(uart_haschar())
		{
			char y = uart_getchar();
			if(y == 'F')
			{
				gpio_write_pin(0,1);
			}
			else
				gpio_write_pin(0,0);
		}

	}

	return 1;

}
